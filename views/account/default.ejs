<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<div class="account-container">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    
    <div class="account-links">
        <a href="/account/update/<%= locals.accountData.account_id %>" class="update-link">Update Account Information</a>

        <div class="inventory-section">
            <% if (locals.accountData.account_type === "Admin") { %>
                <h3>Account Management</h3>
                <a href="/account/manage">Manage Accounts</a>
            <% } %>
            <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
                <h3>Inventory Management</h3>
                <a href="/inv/">Manage Inventory</a>
            <% } %>
        </div>
    </div>
  </div>