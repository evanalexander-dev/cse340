<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<div class="delete-account-container">
    <p class="delete-confirm-message">Confirm Deletion - The delete is permanent.</p>
    <form id="deleteAccount" action="/account/manage/delete" method="post">  

        <label for="account_firstname">First name</label>
        <input type="text" id="account_firstname" name="account_firstname" readonly value="<%= locals.account_firstname %>">

        <label for="account_lastname">Last name</label>
        <input type="text" id="account_lastname" name="account_lastname" readonly value="<%= locals.account_lastname %>">

        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" readonly value="<%= locals.account_email %>">

        <label for="account_type">Account type</label>
        <input type="text" id="account_type" name="account_type" readonly value="<%= locals.account_type %>">
        
        <button type="submit" class="delete-account-btn">DELETE</button>

        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>
</div>