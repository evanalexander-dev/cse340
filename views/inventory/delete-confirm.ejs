<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<div class="delete-inventory-container">
    <p class="delete-confirm-message">Confirm Deletion - The delete is permanent.</p>
    <form id="deleteInventoryForm" action="/inv/delete" method="post">  
        <label for="make">Make</label>
        <input type="text" id="make" name="inv_make" value="<%= locals.inv_make %>" readonly>

        <label for="model">Model</label>
        <input type="text" id="model" name="inv_model" value="<%= locals.inv_model %>" readonly>

        <label for="year">Year</label>
        <input type="number" id="year" name="inv_year" value="<%= locals.inv_year %>" readonly>

        <label for="price">Price</label>
        <input type="number" id="price" name="inv_price" value="<%= locals.inv_price %>" readonly>
        
        <button type="submit" class="delete-inventory-btn">DELETE</button>

        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>